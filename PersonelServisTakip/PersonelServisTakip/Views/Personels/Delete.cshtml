@model PersonelServisTakip.Models.Entity.Personel

@{
    ViewData["Title"] = "Delete Personnel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="display-4 text-center">Delete Personnel</h1>
    <h3 class="text-center text-danger">Are you sure you want to delete this personnel?</h3>
    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Personnel Details</h4>
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Photo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Photo)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    Service Vehicle
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ServiceVehicle.Id)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    Department
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Department.Id)
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>
