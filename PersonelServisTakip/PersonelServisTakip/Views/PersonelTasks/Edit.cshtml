@model PersonelServisTakip.Models.Entity.PersonelTask

@{
    ViewData["Title"] = "Edit Personnel Task";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="display-4 text-center">@ViewData["Title"]</h1>
    <div class="card mt-4 shadow-sm">
        <div class="card-body">
            <h4 class="card-title">Task Details</h4>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter task title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control" placeholder="Enter task description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AssignedDate" class="form-label">Assigned Date</label>
                    <input asp-for="AssignedDate" class="form-control" placeholder="Enter assigned date" />
                    <span asp-validation-for="AssignedDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DueDate" class="form-label">Due Date</label>
                    <input asp-for="DueDate" class="form-control" placeholder="Enter due date" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PersonelId" class="form-label">Personnel</label>
                    <select asp-for="PersonelId" class="form-control" asp-items="ViewBag.PersonelId"></select>
                    <span asp-validation-for="PersonelId" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
